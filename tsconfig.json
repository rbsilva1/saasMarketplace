{
  "compilerOptions": {
    "target": "es2016",    
    "module": "commonjs",                                
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./dist",  
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                      
    "noImplicitAny": true,                            
    "strictNullChecks": true,
    "skipLibCheck": true                              
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
